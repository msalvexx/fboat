{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "module": "CommonJS",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": ["src", "tests", "jest.config.ts", "jest.integration.config.ts", "migrations"],
  "exclude": []
}
